<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="view.MainWindowController">
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="File">
					<items>
						<MenuItem mnemonicParsing="false" text="Close" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Edit">
					<items>
						<MenuItem mnemonicParsing="false" text="Delete" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Help">
					<items>
						<MenuItem mnemonicParsing="false" text="About" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<left>
		<VBox spacing="50.0" BorderPane.alignment="CENTER">
			<children>
				<HBox spacing="10.0">
					<children>
						<Button mnemonicParsing="false" onAction="#Connect"
							text="Connect" />
						<Button mnemonicParsing="false" onAction="#LoadData"
							text="Load Data" />
						<Button mnemonicParsing="false"
							onAction="#ConnectingPopUpServer" text="Calculate Path" />
					</children>
				</HBox>

				<!-- <MapDisplayer fx:id="mapDisplayerData" height="300.0" width="300.0" 
					/> -->
			</children>
			<BorderPane.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</BorderPane.margin>
		</VBox>
	</left>
	<center>
		<VBox spacing="50.0" BorderPane.alignment="CENTER">
			<children>
				<RadioButton mnemonicParsing="false"
					text="- Auto Pilot -" />
				<TextArea fx:id="TextAreaAutoPilot" prefHeight="181.0"
					prefWidth="401.0"
					promptText="Load here a txt file for the AutoPilot ....">
					<opaqueInsets>
						<Insets />
					</opaqueInsets>
					<VBox.margin>
						<Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
					</VBox.margin>
				</TextArea>
				<Button lineSpacing="10.0" mnemonicParsing="false"
					onAction="#LoadAutoPilotText" prefHeight="25.0" prefWidth="165.0"
					text="Load Auto Pilot Text">
					<VBox.margin>
						<Insets bottom="10.0" left="10.0" right="10.0" />
					</VBox.margin>
				</Button>
			</children>
			<BorderPane.margin>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</BorderPane.margin>
		</VBox>
	</center>
	<right>
		<VBox prefWidth="400.0" BorderPane.alignment="CENTER">
			<children>
				<RadioButton mnemonicParsing="false" text="- Manual -" />
				<AnchorPane fx:id="anchorPane" prefHeight="200.0"
					prefWidth="200.0">
					<children>
						<Circle fx:id="JoystickOut" fill="#5f5f5f" layoutX="200.0"
							layoutY="250.0" radius="100.0" stroke="BLACK" strokeType="INSIDE" />
						<Circle fx:id="JoystickIn" fill="#25639c" layoutX="200.0"
							layoutY="250.0" radius="30.0" stroke="BLACK" strokeType="INSIDE" />
						<ImageView fitHeight="101.0" fitWidth="95.0"
							layoutX="271.0" layoutY="202.0" opacity="0.21"
							pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../../../../../Downloads/right%20arrow.png" />
							</image>
						</ImageView>
						<Slider fx:id="throttleSlider" layoutY="70.0" max="1.0"
							orientation="VERTICAL" prefHeight="300.0" prefWidth="70.0"
							showTickLabels="true" showTickMarks="true" />
						<Text layoutX="-5.0" layoutY="225.0" rotate="-92.1"
							strokeType="OUTSIDE" strokeWidth="0.0" text="Throttle" />
						<Slider fx:id="rudderSlider" layoutX="40.0" layoutY="400.0"
							max="1.0" maxHeight="-Infinity" maxWidth="-Infinity" min="-1.0"
							prefHeight="70.0" prefWidth="300.0" showTickLabels="true"
							showTickMarks="true">
							<padding>
								<Insets left="10.0" right="10.0" top="10.0" />
							</padding>
						</Slider>
						<Text layoutX="170.0" layoutY="465.0" strokeType="OUTSIDE"
							strokeWidth="0.0" text="Rudder" />
						<ImageView fitHeight="101.0" fitWidth="95.0"
							layoutX="153.0" layoutY="80.0" opacity="0.21" pickOnBounds="true"
							preserveRatio="true" rotate="-88.9">
							<image>
								<Image url="@../../../../../Downloads/right%20arrow.png" />
							</image>
						</ImageView>
						<ImageView fitHeight="101.0" fitWidth="95.0"
							layoutX="154.0" layoutY="323.0" opacity="0.21"
							pickOnBounds="true" preserveRatio="true" rotate="90.0">
							<image>
								<Image url="@../../../../../Downloads/right%20arrow.png" />
							</image>
						</ImageView>
						<ImageView fitHeight="101.0" fitWidth="95.0"
							layoutX="33.0" layoutY="202.0" opacity="0.21" pickOnBounds="true"
							preserveRatio="true" rotate="-180.0">
							<image>
								<Image url="@../../../../../Downloads/right%20arrow.png" />
							</image>
						</ImageView>
					</children>
				</AnchorPane>
			</children>
		</VBox>
	</right>
</BorderPane>
